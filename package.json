{
  "name": "scaffolding-project-es6",
  "version": "0.1.0",
  "description": "用于开发基于ES6的单页应用脚手架",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "scripts": {
    "build:dev": "webpack --config webpack.config.dev.babel.js --colors --display-error-details",
    "build:prod": "webpack --config webpack.config.prod.babel.js --colors --display-error-details",
    "start": "webpack-dev-server --config webpack.config.dev.babel.js --colors",
    "mock": "node mock-server/server.js",
    "start:mock": "concurrently \"cross-env NODE_ENV=mock npm start\" \"npm run mock\"",
    "lint:js": "eslint -c .eslintrc.prod.json --fix",
    "test": "jest",
    "package": "npm run build:prod && gulp zip",
    "deploy:dev": "npm run package && gulp deploy-dev",
    "deploy:test": "npm run package && gulp deploy-test",
    "deploy:all": "npm run package && gulp deploy-all",
    "git:push": "gulp git-push"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "npm run lint:js",
        "git add"
      ]
    },
    "ignore": []
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "@beancommons/http": "^0.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-export-default-from": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@beancommons/define": "^0.2.1",
    "@beancommons/proxy": "^0.2.1",
    "autoprefixer": "^9.1.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.2",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.0",
    "eslint-loader": "^2.1.0",
    "file-loader": "^2.0.0",
    "gulp": "^4.0.0",
    "gulp-sftp": "^0.1.5",
    "gulp-zip": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "json-server": "^0.14.0",
    "lint-staged": "^8.1.0",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.10.0",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.19.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.8",
    "webpack-merge": "^4.1.4"
  },
  "devEnvironments": {
    "servers": {
      "local": 8080,
      "mock": 3001
    },
    "proxies": [
      "http://ip.taobao.com"
    ],
    "globals": {
      "DOMAIN": "http://ip.taobao.com"
    }
  },
  "project": {
    "title": "My App",
    "rootPath": "",
    "packageName": "www.myapp.com"
  },
  "deploy": {
    "dev": {
      "host": "xxx.xxx.xxx.xxx",
      "port": 22,
      "user": "xxx",
      "pass": "xxx",
      "zip": false,
      "timeout": 60000,
      "remotePath": "/usr/local/static"
    },
    "test": {
      "host": "xxx.xxx.xxx.xxx",
      "port": 22,
      "user": "xxx",
      "pass": "xxx",
      "zip": true,
      "timeout": 60000,
      "remotePath": "/usr/local/static"
    }
  }
}
